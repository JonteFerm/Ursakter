<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ursakter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.ursakter.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ursakter.CategoryActivity"
            android:label="@string/title_activity_library" />
        <activity
            android:name="com.example.ursakter.LibraryActivity"
            android:label="@string/title_activity_category" />
        <activity
            android:name="com.example.ursakter.RandomExcusesActivity"
            android:label="@string/title_activity_random_excuses" />
        <activity
            android:name="com.example.ursakter.AddActivity"
            android:label="@string/title_activity_add"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.example.ursakter.OwnExcusesActivity"
            android:label="@string/title_activity_own_excuses" />
        <activity
            android:name="com.example.ursakter.FavouriteActivity"
            android:label="@string/title_activity_favourite" />
        <activity
            android:name="com.example.ursakter.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.example.ursakter.ChooseRatingActivity"
            android:label="@string/title_activity_choose_rating" />
        <activity
            android:name="com.example.ursakter.AboutActivity"
            android:label="@string/title_activity_about" />
    </application>

</manifest>