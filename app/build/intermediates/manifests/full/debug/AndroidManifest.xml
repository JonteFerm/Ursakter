<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ursakter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ursakter.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ursakter.ExcuseActivity"
            android:label="@string/title_activity_randomization"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.ursakter.CategoryActivity"
            android:label="@string/title_activity_library" >
        </activity>
        <activity
            android:name="com.example.ursakter.LibraryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="com.example.ursakter.RandomExcusesActivity"
            android:label="@string/title_activity_random_excuses" >
        </activity>
        <activity
            android:name="com.example.ursakter.AddActivity"
            android:label="@string/title_activity_add" >
        </activity>
    </application>

</manifest>