<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ursakter.LibraryActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/top_panel"
        android:background="@drawable/bar_top_bg"
        android:gravity="center"
        android:layout_alignParentTop="true"
        >

        <Button
            style="@style/TopPanelLeftButtons"
            android:id="@+id/share_btn"
            android:background="@drawable/ui_app_btn_share_grey"
        />

        <Button
            style="@style/TopPanelButtons"
            android:id="@+id/home_btn"
            android:onClick="mainMenu"
            android:background="@drawable/ui_app_btn_home"
        />

        <Button
            style="@style/TopPanelRightButtons"
            android:id="@+id/rating_button"
            android:onClick="rateCurrent"
            android:background="@drawable/ui_app_btn_rate_0"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/top_panel"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
            />

            <TextView
                android:layout_below="@+id/textView1"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/start_text"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                />

            <android.support.v4.view.ViewPager
                android:layout_below="@id/textView2"
                android:id="@+id/pager"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
            >

            </android.support.v4.view.ViewPager>

            <TextView
                android:layout_below="@+id/pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="center"
                android:layout_centerInParent="true"
            />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:onClick="loadNewExcuse"
            android:background="@drawable/ui_app_btn_next"

        />

        <Button
            android:id="@+id/previous_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:onClick="getPrevious"
            android:background="@drawable/ui_app_btn_back"

        />

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:id="@+id/bottom_panel"
            android:background="@drawable/ui_app_bg_bottom"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
        </LinearLayout>

    </FrameLayout>

