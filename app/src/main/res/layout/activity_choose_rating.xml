<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.ursakter.ChooseRatingActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/top_panel"
        android:background="@drawable/bar_top_bg"
        android:gravity="center"
        android:layout_alignParentTop="true"
        >

        <Button
            android:id="@+id/home_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="mainMenu"
            android:background="@drawable/ui_app_btn_home"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/top_panel"
        android:weightSum="5"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="0"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_0"
                android:layout_weight="1"
            />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="1"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_1"
                android:layout_weight="1"
            />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="2"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_2"
                android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="3"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_3"
                android:layout_weight="1"
            />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="4"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_4"
                android:layout_weight="1"
            />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:tag="5"
                android:onClick="openFavourites"
                android:background="@drawable/ui_app_btn_rate_5"
                android:layout_weight="1"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

