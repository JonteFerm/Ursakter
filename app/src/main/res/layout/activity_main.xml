<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.ursakter.MainActivity" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/main_title"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#000"
    />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
    >

        <Button
            style="@style/MenuButtonsTop"
            android:background="@drawable/btn_toc"
            android:onClick="openLibrary"
        />

        <Button
            style="@style/MenuButtonsTop"
            android:background="@drawable/btn_settings"
            />



        <Button
            style="@style/MenuButtonsTop"
            android:background="@drawable/btn_about"
        />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        >

        <Button
            style="@style/MenuButtonsBottom"
            android:background="@drawable/btn_add"
        />

        <Button
            style="@style/MenuButtonsBottom"
            android:background="@drawable/btn_fav"
        />


    </LinearLayout>

    <Button
        android:id="@+id/randomizeButton"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="48dp"
        android:onClick="openExcuse"
        android:background="@drawable/btn_random"
    />
</LinearLayout>